[Unit]
Description=MCP File Operations Server
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/home/web/ssl-shop.jp/acme_shop/mcp-server
Environment=NODE_ENV=production
Environment=SERVER_ROOT=/home/web/ssl-shop.jp/acme_shop
Environment=PORT=3001
ExecStart=/usr/bin/node dist/index.js
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
